<mujoco model="mppi">

  <compiler angle="radian"/>

  

  <option timestep="0.001" gravity="0 0 -9.81"/>

  

  <asset>

    <mesh name="base_link" file="base_link.stl"/>

    <mesh name="Link_1" file="Link_1.stl"/>

    <mesh name="Link_2" file="Link_2.stl"/>

  </asset>



  <actuator>

    <motor joint="Joint_1" name="act1" gear="1" ctrlrange="-1 1"/>

    <motor joint="Joint_2" name="act2" gear="1" ctrlrange="-1 1"/>

  </actuator>



  <worldbody>

    <!-- base_link 是真正的根 body -->

    <body name="base_link" pos="0 0 0" quat="0.7071 0.7071 0 0">

      <inertial mass="0.1" pos="0 0 0" diaginertia="1e-4 1e-4 1e-4"/>  <!-- 🔧 添加惯性！ -->

      <geom type="mesh" mesh="base_link" rgba="1 1 1 1"/>



      <body name="Link_1" pos="0.001 -0.0735 0">

        <inertial pos="-0.0016 0 -0.1105" mass="0.07" diaginertia="3e-5 2.5e-5 1.2e-5"/>

        <joint name="Joint_1" pos="0 0 0" axis="1 0 0" damping="0.05" frictionloss="0.07"/>

        <geom type="mesh" mesh="Link_1" rgba="1 0.95 0.9 1"/>



        <body name="Link_2" pos="0 0 -0.1608" quat="0 1 0 0">

          <inertial pos="-0.00195 0 0.0204" mass="0.02" diaginertia="2e-5 2e-5 2e-5"/>

          <joint name="Joint_2" pos="0 0 0" axis="1 0 0" damping="0.05" frictionloss="0.07"/>

          <geom type="mesh" mesh="Link_2" rgba="1 1 1 1"/>

        </body>

      </body>

    </body>

  </worldbody>

</mujoco>

